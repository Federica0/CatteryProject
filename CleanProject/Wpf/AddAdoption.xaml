<Window x:Class="Wpf.AddAdoption"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
        Title="AddAdoption" Height="450" Width="800">
    <Grid>
        <Button x:Name="Menu3" Content="Menù" HorizontalAlignment="Left" Height="39" Margin="53,330,0,0" VerticalAlignment="Top" Width="130" Click="Menu3_Click"/>
        <Label Content="NOME ADOTTANTE" HorizontalAlignment="Left" Margin="58,81,0,0" VerticalAlignment="Top" Width="139"/>
        <Label Content="COGNOME ADOTTANTE" HorizontalAlignment="Left" Margin="58,136,0,0" VerticalAlignment="Top" Width="148"/>
        <Label Content="INDIRIZZO ADOTTANTE" HorizontalAlignment="Left" Margin="58,192,0,0" VerticalAlignment="Top" Width="148"/>
        <Label Content="NUMERO DI TELEFONO ADOTTANTE" HorizontalAlignment="Left" Margin="58,249,0,0" VerticalAlignment="Top" Height="26" Width="222" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <DatePicker x:Name="DpkAdoptionDate" HorizontalAlignment="Left" Margin="283,288,0,0" VerticalAlignment="Top" Height="40" Width="204"/>
        <Label Content="DATA DI ADOZIONE" HorizontalAlignment="Left" Height="26" Margin="58,295,0,0" VerticalAlignment="Top" Width="193"/>
        <TextBox x:Name="txtNumber" HorizontalAlignment="Left" Height="36" Margin="283,239,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="204"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Height="37" Margin="283,192,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="207"/>
        <TextBox x:Name="txtSurname" HorizontalAlignment="Left" Height="37" Margin="283,136,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="207"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="37" Margin="283,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="204" />
        <ListBox x:Name="ListBoxNameCats" HorizontalAlignment="Left" Height="247" Margin="583,81,0,0" VerticalAlignment="Top" Width="184" DisplayMemberPath="Name"/>
        <Label Content="SELEZONARE IL GATTTO" HorizontalAlignment="Left" Height="23" Margin="585,58,0,0" VerticalAlignment="Top" Width="182"/>
        <Button x:Name="BtnSave" Content="Save" HorizontalAlignment="Left" Height="39" Margin="642,336,0,0" VerticalAlignment="Top" Width="130" />
        <Label Content="ADOZIONE DI UN GATTO" FontSize="35"   HorizontalAlignment="Left" Height="64" Margin="58,19,0,0" VerticalAlignment="Top" Width="704"/>

    </Grid>
</Window>
